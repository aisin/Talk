extends common/layout

block header
    include common/header

block append main
    #Wrap
        .container
            #Main
                .box
                    #Tab.inner
                        a(href="#") 技术
                        a(href="#") 创意
                        a(href="#") 好玩
                        a(href="#") Apple
                        a(href="#") 酷工作
                        a(href="#") 城市
                        a(href="#") 问与答
                    each thread in threads
                        .cell.item
                            .avatar
                                a(href="#")
                                    img(src="//imgs.duwu.me/duwu/avatar/000/00/12/75.jpg")
                            .all
                                h2.title
                                    a(href="/thread/#{thread._id}") #{thread.title}
                                .meta.small.fade
                                    a.node(href="#") 技术帖
                                    span &nbsp;•&nbsp;
                                    strong
                                        a(href="/member/#{thread.author_id}") #{thread.author}
                                    span &nbsp;•&nbsp;#{moment(thread.create_at).fromNow()}
                            .reply
                                a.replay-count(href="#") 18
                    .inner
                        a(href="#")
                            span.chevron →&nbsp;
                            | 更多新主题
                .box
                    .cell
                        span.fade
                            strong V2EX
                            | &nbsp;/ 节点导航
                        .fr
                            a(href="#") 浏览全部节点

            #Sidebar
                .box
                    if session
                        .cell
                            .avatar
                                a(href="#")
                                    img(src="//imgs.duwu.me/duwu/avatar/000/00/12/75.jpg")
                            .all
                                h2.title
                                    a(href="#") #{session.nickname}
                                .meta.small.fade
                                    | 前端开发工程师
                    else
                        .cell
                            strong V2ex = way to explore
                            div.fade V2EX 是一个关于分享和探索的地方
                        .inner
                            .ladder.text-center
                                a.super.normal.button.inline-block(href="/register") 现在注册
                            .ladder.text-center
                                | 已注册用户请&nbsp;
                                a(href="/login") 登录


block footer
    include common/footer