extends ../common/layout

block append main
    .content-wrapper
        // Content Header (Page header)
        section.content-header
            h1
                | General Form Elements
                small Preview
            ol.breadcrumb
                li
                    a(href="#")
                        i.fa.fa-dashboard
                        | Home
                li
                    a(href="#") Forms
                li.active General Elements
        // Main content
        section.content
            .row
                // right column
                .col-md-6
                    // Horizontal Form
                    .box.box-info
                        .box-header.with-border
                            h3.box-title Horizontal Form
                        // /.box-header
                        // form start
                        form.form-horizontal
                            .box-body
                                .form-group
                                    label.col-sm-2.control-label(for="inputEmail3") Email
                                    .col-sm-10
                                        input#inputEmail3.form-control(type="email", placeholder="Email")
                                .form-group
                                    label.col-sm-2.control-label(for="inputPassword3") Password
                                    .col-sm-10
                                        input#inputPassword3.form-control(type="password", placeholder="Password")
                                .form-group
                                    .col-sm-offset-2.col-sm-10
                                        .checkbox
                                            label
                                                input(type="checkbox")
                                                | Remember me
                            // /.box-body
                            .box-footer
                                button.btn.btn-default(type="submit") Cancel
                                button.btn.btn-info.pull-right(type="submit") Sign in